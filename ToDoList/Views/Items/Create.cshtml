@{
  Layout = "_Layout";
}

@model ToDoList.Models.Item

<h4>Add a new task</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)<br>

  @Html.Label("Enter a due date:")
  @Html.EditorFor(model => model.DueDate)<br>

  @Html.Label("Select category")
  @Html.DropDownList("CategoryId")<br>

  <input type="submit" value="Add new item" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all items", "Index")</p>